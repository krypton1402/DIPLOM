<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Width="128" Height="70"
             x:Class="PanelControlTest1.MyControls.MyCheckButton">
	
	
	<Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#486d92" Width="128" Height="70" >
		<CheckBox Margin="5" Foreground="White" Content="{Binding Description2}">
			<CheckBox.RenderTransform>
				<ScaleTransform ScaleX="0.9" ScaleY="0.9"></ScaleTransform>
			</CheckBox.RenderTransform>
		</CheckBox>
	</Border>
	
	
</UserControl>
